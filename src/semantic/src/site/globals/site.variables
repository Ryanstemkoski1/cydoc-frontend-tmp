/*-------------------
    Border Radius
--------------------*/


@relativeBorderRadius: @relative7px;
@absoluteBorderRadius: @7px;
@defaultBorderRadius: 0px;

@linkColor           : @textColor;


/*-----------------
       Shadows
 ------------------*/

@subtleShadow:
  0 10px 15px 5px RGBA(0, 128, 159, 0.2);

