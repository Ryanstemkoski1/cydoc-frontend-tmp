/*******************************
     User Global Variables
/*-------------------
       Fonts
--------------------*/

@fontName          : 'Nunito';
@importGoogleFonts: true;

@headerFont     : 'Lato', Arial, Helvetica, sans-serif;
@pageFont       : @fontName, Arial, Helvetica, sans-serif;

@normal         : normal;
@bold           : bold;

@red            : #db5151;
@orange         : #FE9A76;
@yellow         : #FFD700;
@olive          : #32CD32;
@green          : #016936;
@teal           : #007a9a;
@lightTeal		: #EAF3F5;
@blue           : #0E6EB8;
@violet         : #424874;
@purple         : #B413EC;
@pink           : #FF1493;
@brown          : #A52A2A;
@grey           : #707070;
@black          : #000000;
@lightgrey      : #E0E1E2;
@white			: #FFFFFF;

@primaryColor   : @teal;
@secondaryColor : @grey;

/*-------------------
        Page
--------------------*/

@pageBackground      : @lightTeal;
@pageOverflowX       : hidden;

@lineHeight          : 1.4285em;
@textColor           : @grey;

