# Top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true

# Tab indentation
[*.js]
indent_style = space
indent_size = 4

# Trim trailing whitespaces
[*.js]
trim_trailing_whitespace = true

# Tab indentation
[Makefile]
indent_style = space
indent_size = 4

# Matches the exact file package.json
[package.json]
indent_style = space
indent_size = 2
